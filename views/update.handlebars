
<div class="container mt-4">
  <div class="row">
    <div class="col">
      <h1 class="display-4">Update a Post</h1>
      {{#if loggedIn}}
      <div class="container mt-4">
        <div class="row">
          <div class="col">
            <h2 class="card-title">{{blogPost.title}}</h2>
            <p class="card-text">{{blogPost.body}}</p>
            <p class="card-subtitle mb-2 text-muted">Created On: {{blogPost.created_on}}</p>
            <h3>Update Post:</h3>
                <form id="updatePostForm" data-post-id="{{blogPost.id}}">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <label for="blogPostTitle">New Title:</label>
                    <input type="text" class="form-control" id="blogPostTitle" name="title" required>
                </div>
                <div class="form-group">
                    <label for="blogPostBody">New Body:</label>
                    <textarea class="form-control" id="blogPostBody" name="body" rows="4" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit Update</button>
                </form>
          </div>
        </div>
      </div>
      {{else}}
      <a href="/login">You must login first to update a post</a>
      {{/if}}
    </div>
  </div>
</div>
<script src="/js/update.js"></script>



