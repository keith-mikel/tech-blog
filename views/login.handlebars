<div class="container mt-4">
    <div class="row justify-content-between">
        <div class="col-md-6">
            <div class="card login-card">
                <h2 class="card-title">Login</h2>
                <form class="card-body login-form">
                    <div class="mb-3">
                        <label for="email-login" class="form-label">Email:</label>
                        <input class="form-control" type="text" id="email-login" />
                    </div>
                    <div class="mb-3">
                        <label for="password-login" class="form-label">Password:</label>
                        <input class="form-control" type="password" id="password-login" />
                    </div>
                    <button class="btn btn-primary" type="submit">Login</button>
                </form>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card login-card">
                <h2 class="card-title">Signup</h2>
                <form class="card-body signup-form">
                    <div class="mb-3">
                        <label for="username-signup" class="form-label">Username:</label>
                        <input class="form-control" type="text" id="username-signup" />
                    </div>
                    <div class="mb-3">
                        <label for="email-signup" class="form-label">Email:</label>
                        <input class="form-control" type="text" id="email-signup" />
                    </div>
                    <div class="mb-3">
                        <label for="password-signup" class="form-label">Password:</label>
                        <input class="form-control" type="password" id="password-signup" />
                    </div>
                    <button class="btn btn-primary" type="submit">Signup</button>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="./js/login.js"></script>
